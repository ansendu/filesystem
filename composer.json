{
    "name": "dazzle-php/filesystem",
    "description": "Dazzle Asynchronous Filesystem.",
    "keywords": [
        "dazzle", "dazzle-php", "async", "filesystem", "file", "storage"
    ],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/dazzle-php/filesystem/issues",
        "source": "https://github.com/dazzle-php/filesystem"
    },
    "authors": [
        {
            "name":     "Kamil Jamroz",
            "homepage": "https://github.com/khelle"
        },
        {
            "name":     "The contributors",
            "homepage": "http://github.com/dazzle-php/filesystem/contributors"
        }
    ],
    "require": {
        "php": ">=5.6.7",
        "dazzle-php/event": "0.5.*",
        "dazzle-php/loop": "0.5.*",
        "dazzle-php/promise": "0.5.*",
        "dazzle-php/stream": "0.5.*",
        "dazzle-php/util": "0.5.*",
        "dazzle-php/throwable": "0.5.*"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8.0 <5.4.0"
    },
    "autoload": {
        "psr-4": {
            "Dazzle\\Filesystem\\": "src/Filesystem",
            "Dazzle\\Filesystem\\Test\\": "test"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.5-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
